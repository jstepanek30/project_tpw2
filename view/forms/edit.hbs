<form action='/articles/edit/{{article.id}}?_method=PUT' method="POST">
   <div class="form-group">
      <label for="name">Header</label>
      <input class="form-control" type="text" name="name" value="{{article.name}}" required>
      <div class="nameError">{{errors.name}}</div>

      <label for="description">Description</label>
      <textarea class="form-control" name="description" cols="30" rows="2" required>{{article.description}}</textarea>
      <div class="descriptionError">{{errors.description}}</div>

      <label for="content">Article</label>
      <textarea class="form-control" name="content" cols="30" rows="10" required>{{article.content}}</textarea>
      <div class="contentError">{{errors.content}}</div>
   </div>
   <button type="submit" class="btn btn-primary">Save</button>
   <a href="/" class="btn btn-secondary">Cancel</a>
</form>